server {
    listen 80 default_server;
    return 404;
}
server {
    listen 80;

    root /var/www/html;
    index index.html;

    server_name {{ hostvars[inventory_hostname].vars.FRONT_DOMAIN }};

    location / {
        try_files $uri $uri/ =404;
    }
}
server {
    listen 80;

    root /var/www/html;
    index index.html;

    server_name {{ hostvars[inventory_hostname].vars.BACKEND_DOMAIN }};

    location / {
        try_files $uri $uri/ =404;
    }
}